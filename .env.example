# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_NAME=your_sql

#redis配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_DB=0

# 应用配置
NODE_ENV=development
PORT=3000
APP_NAME=论坛服务
APP_VERSION=1.0.0
APP_DESCRIPTION=论坛服务后端 API
APP_AUTHOR=Forum Team
API_PREFIX=api

# 验证管道配置
VALIDATION_WHITELIST=true
VALIDATION_TRANSFORM=true
VALIDATION_FORBID_NON_WHITELISTED=true

# 安全配置
BCRYPT_SALT_ROUNDS=10
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Swagger 配置
SWAGGER_TITLE=论坛服务 API
SWAGGER_DESCRIPTION=论坛服务后端 API 文档
SWAGGER_VERSION=1.0
SWAGGER_PATH=swagger
SWAGGER_PERSIST_AUTH=true
SWAGGER_TAG_APP=应用信息
SWAGGER_TAG_USER=用户管理

# CORS 配置
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=false

# 日志配置
LOG_LEVEL=info
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_FILE_PATH=./logs